@model IEnumerable<S3G1_PVFAPP.Models.Vendor>

@{
    ViewBag.Title = "Index";
    ViewBag.Active = "Vendors";
}

<div class="contactus">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="title">
                    <h2>Vendors</h2>

                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Create New", "Create", "Vendors", null, new { @class = "add-bt" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VendorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorAddress)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VendorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendorAddress)
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VendorID }) |
                @Html.ActionLink("Details", "Details", new { id = item.VendorID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.VendorID })
            </td>
        </tr>
    }

</table>
